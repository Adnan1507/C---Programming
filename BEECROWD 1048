#include<stdio.h>
int main()
{
    double a, b, c;
    int d;
    scanf("%lf", &a);
    if((a>=0)&&(a<=400.00))
    {
        b = (a*15)/100;
        c = b + a;
        d = 15;
        printf("Novo salario: %.2lf\nReajuste ganho: %.2lf\nEm percentual: %d %\n", c, b, d);
    }
    else if((a>400.00)&&(a<=800.00))
    {
        b = (a*12)/100;
        c = b + a;
        d = 12;
        printf("Novo salario: %.2lf\nReajuste ganho: %.2lf\nEm percentual: %d %\n", c, b, d);
    }
    else if((a>800.00)&&(a<=1200.00))
    {
        b = (a*10)/100;
        c = b + a;
        d = 10;
        printf("Novo salario: %.2lf\nReajuste ganho: %.2lf\nEm percentual: %d %\n", c, b, d);
    }
    else if((a>1200.00)&&(a<=2000.00))
    {
        b = (a*7)/100;
        c = b + a;
        d = 7;
        printf("Novo salario: %.2lf\nReajuste ganho: %.2lf\nEm percentual: %d %\n", c, b, d);
    }
    else if(a>2000.00)
    {
        b = (a*4)/100;
        c = b + a;
        d = 4;
        printf("Novo salario: %.2lf\nReajuste ganho: %.2lf\nEm percentual: %d %\n", c, b, d);
    }
    return 0;
}
