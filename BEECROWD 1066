#include<stdio.h>
int main()
{
    int i, a, b, c, d, e;
    i=1;
    b=0;
    c=0;
    d=0;
    e=0;
    while(i<=5)
    {
        scanf("%d", &a);
        if(a%2==0)
        {
            b++;
        }
        if(a%2!=0)
        {
            c++;
        }
        if(a>0)
        {
            d++;
        }
        if(a<0)
        {
            e++;
        }

        i++;
    }
    printf("%d valor(es) par(es)\n", b);
    printf("%d valor(es) impar(es)\n", c);
    printf("%d valor(es) positivo(s)\n", d);
    printf("%d valor(es) negativo(s)\n", e);
    return 0;
}
