#include<stdio.h>
int main()
{
    int i, b;
    double a, c, d;
    i=1;
    b=0;
    c=0;
    while(i<=6)
    {
        scanf("%lf", &a);
        if(a>0)
        {
            c=c+a;
            b++;
        }
        i++;
    }
    d = c/b;
    printf("%d valores positivos\n%.1lf\n", b, d);
    return 0;
}
