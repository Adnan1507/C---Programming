#include<stdio.h>
int main()
{
    int X, Y;
    double A, Z;
    scanf("%d%d", &X, &Y);
    if(X==1)
    {
        A = 4.00;
        Z = Y*A;
        printf("Total: R$ %.2lf\n", Z);
    }
    else if(X==2)
    {
        A = 4.50;
        Z = Y*A;
        printf("Total: R$ %.2lf\n", Z);
    }
    else if(X==3)
    {
        A = 5.00;
        Z = Y*A;
        printf("Total: R$ %.2lf\n", Z);
    }
    else if(X==4)
    {
        A = 2.00;
        Z = Y*A;
        printf("Total: R$ %.2lf\n", Z);
    }
    else if(X==5)
    {
        A = 1.50;
        Z = Y*A;
        printf("Total: R$ %.2lf\n", Z);
    }
    return 0;
}
