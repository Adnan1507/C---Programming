#include<stdio.h>
int main()
{
    double a, b, c, d;
    scanf("%lf%lf%lf", &a, &b, &c);
    if(((a+b)>c)&&((b+c)>a)&&((c+a)>b))
    {
        d = a + b + c;
        printf("Perimetro = %.1lf\n", d);
    }
    else
    {
        d = (1/2.0)*(a+b)*(c);
        printf("Area = %.1lf\n", d);
    }
    return 0;
}
